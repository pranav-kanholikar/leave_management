<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%=model_class.human_attribute_name(:fname) %></th>
      <th><%=hidden_field_tag (model_class.human_attribute_name(:lname)) %></th>
      <th><%= model_class.human_attribute_name(:emp_no) %></th>
      <th><%= model_class.human_attribute_name(:date_of_joining) %></th>
      <th><%= model_class.human_attribute_name(:date_of_termination) %></th>
      <th><%= hidden_field_tag (model_class.human_attribute_name(:department)) %></th>
      <th><%= model_class.human_attribute_name(:designation) %></th>
      <th><%=hidden_field_tag ( model_class.human_attribute_name(:lead)) %></th>
      <th><%= model_class.human_attribute_name(:manager) %></th>
      <th><%=hidden_field_tag ( model_class.human_attribute_name(:active)) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to employee.id, employee_path(employee) %></td>
        <td><%=employee.fname%></td>
        <td><%=hidden_field_tag (employee.lname) %></td>
        <td><%= employee.emp_no %></td>
        <td><%= employee.date_of_joining %></td>
        <td><%= employee.date_of_termination %></td>
        <td><%=hidden_field_tag ( employee.department) %></td>
        <td><%= employee.designation %></td>
        <td><%=hidden_field_tag (employee.lead)%></td>
        <td><%= employee.manager %></td>
        <td><%=hidden_field_tag ( employee.active) %></td>
        <td><%=l employee.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      employee_path(employee), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_employee_path(employee), :class => 'btn btn-default btn-xs' %>
          <%= hidden_field_tag (link_to t('.destroy', :default => t("helpers.links.destroy")),
                      employee_path(employee),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' )%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
             new_employer_employee_path(@employer),
            :class => 'btn btn-primary' %>
