<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fname) %>:</strong></dt>
  <dd><%= @employee.fname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lname) %>:</strong></dt>
  <dd><%= @employee.lname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emp_no) %>:</strong></dt>
  <dd><%= @employee.emp_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_of_joining) %>:</strong></dt>
  <dd><%= @employee.date_of_joining %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_of_termination) %>:</strong></dt>
  <dd><%= @employee.date_of_termination %></dd>
  <dt><strong><%= model_class.human_attribute_name(:department) %>:</strong></dt>
  <dd><%= @employee.department %></dd>
  <dt><strong><%= model_class.human_attribute_name(:designation) %>:</strong></dt>
  <dd><%= @employee.designation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lead) %>:</strong></dt>
  <dd><%= @employee.lead %></dd>
  <dt><strong><%= model_class.human_attribute_name(:manager) %>:</strong></dt>
  <dd><%= @employee.manager %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @employee.active %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              employees_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employee_path(@employee), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employee_path(@employee),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<%= link_to t('.apply leaves', :default => t("helpers.links.apply leaves")),
              new_employee_leave_path(@employee), :class => 'btn btn-default'  %>
